<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hey</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body>
    <div class="main w-full min-h-screen bg-zinc-900">
        <div class="form p-10">
            <form action="/create" method="post">
                <input name="title" class="block w-full rounded-md outline-none text-white px-5 py-2 bg-zinc-800"
                    type="text" placeholder="Titile Goes Here">
                <textarea class="block w-full rounded-md outline-none text-white mt-2 px-5 py-2 resize-none bg-zinc-800"
                    name="details" placeholder="Write your task details: "></textarea>
                <input class="mt-2 bg-blue-600 px-5 py-2 rounded-md" type="submit" value="Create Task">
            </form>
        </div>
        <div class="tasks p-10 flex gap-3 flex-wrap p-10">
            <% if(files.length> 0) { %>
                <% files.forEach(function(val) { %>
                    <div class="tasks w-72 px-3 py-4 bg-zinc-800 rounded-md">
                        <h1 class="text-white text-2xl tracing-tighter">
                            <%=val%>
                        </h1>
                        <div class="flex justify-between ">
                            <a class="text-blue-500 inline-block mt-3" href="/file/<%=val%>">Read More.</a>
                            <a class="text-zinc-600 inline-block mt-3" href="/edit/<%=val%>">edit</a>
                        </div>
                        <a class="text-red-500 block mt-1" href="/file/delete/<%=val%>">Delete</a>
                    </div>
                    <% }) %>
                        <% } else { %>
                            <h3 class="text-zinc-300">No Tasks yet.</h3>
                            <% }%>
        </div>

    </div>

</body>

</html>